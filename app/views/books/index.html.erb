<%= render 'books/search_form' %>
<br>
<div class="row">

    <% @books.each do |book| %>

      <div class="col-md-3">
        <% if book.is_published %>
        <a href="/books/<%= book.id %> " >
          <%= image_tag book.image.variant(resize_to_limit: [350, 250]) if book.image.attached? %>
          <h4 class="book-title"><%= book.name %></h4>
        </a>
          <% end %>
      </div>

    <% end %>

  </div>


<br>
<br>
<%= link_to "Add Book", new_book_path %>

